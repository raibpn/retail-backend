// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model Product {
  id Int @id @map("_id")
  title String 
  description String 
  price Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id Int @id @map("_id")
  firstName String
  lastName String
  email String
  hash String
  username String?
}
